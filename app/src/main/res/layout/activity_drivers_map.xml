<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".DriversMapActivity" >


        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/driver_logout_btn"/>


    <RelativeLayout
        android:id="@+id/rel2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimaryDark"
        android:layout_margin="10dp"
        android:visibility="gone">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image_customer"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/profile"
            app:civ_border_width="2dp"
            app:civ_border_color="#c880ff"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:padding="3dp"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/name_customer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/profile_image_customer"
            android:text="Customer Name"
            android:textColor="@android:color/background_light"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:fontFamily="@font/comfortaa_light"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:padding="3dp"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/phone_number_customer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/profile_image_customer"
            android:text="Phone Number"
            android:textColor="@android:color/background_light"
            android:layout_below="@id/name_customer"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:fontFamily="@font/comfortaa_light"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:padding="3dp"
            android:textSize="15sp"/>


        <ImageView
            android:id="@+id/call_btn"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:padding="3dp"
            android:src="@drawable/phone"
            android:tint="@android:color/black"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"/>

    </RelativeLayout>


    <Button
        android:id="@+id/driver_settings_btn"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimaryDark"
        android:text="Settings"
        android:textSize="18sp"
        android:fontFamily="@font/comfortaa_light"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@android:color/background_light"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/driver_logout_btn"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:fontFamily="@font/comfortaa_light"
        android:text="Logout"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@android:color/background_light"
        android:textStyle="bold" />


</RelativeLayout>

